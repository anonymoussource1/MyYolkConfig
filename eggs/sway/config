bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+minus scratchpad show
bindsym $mod+Shift+minus move scratchpad

input "type:keyboard" {
  xkb_layout us(altgr-intl)
  xkb_options caps:escape
}

input "type:touchpad" {
  click_method clickfinger
  clickfinger_button_map lrm
  drag enabled
  dwt enabled
  tap enabled
  tap_button_map lrm
}

output "*" {
  bg #1B1B17 solid_color
  # {# if SYSTEM.hostname == "dandy-desktop" #}
  #<yolk> scale 1.5 
}

bindsym $mod+r mode resize
mode "resize" {
  bindsym Down resize grow height 10 px
  bindsym Escape mode default
  bindsym Left resize shrink width 10 px
  bindsym Return mode default
  bindsym Right resize grow width 10 px
  bindsym Up resize shrink height 10 px
  bindsym h resize shrink width 10 px
  bindsym j resize grow height 10 px
  bindsym k resize shrink height 10 px
  bindsym l resize grow width 10 px
}

bindsym $mod+P exec flameshot gui
bindsym $mod+Return exec kitty
bindsym $mod+d exec eww open launcher

assign [app_id="kitty"] 1
assign [app_id="zen"] 2
assign [app_id="spotify"] 3

for_window [app_id="."] inhibit_idle fullscreen

exec kitty
exec flatpak run app.zen_browser.zen
# {# if SYSTEM.hostname == "dandy-desktop" #}
#<yolk> exec flatpak run com.spotify.Client

exec_always eww open bar

exec "dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP XDG_SESSION_TYPE NIXOS_OZONE_WL XCURSOR_THEME XCURSOR_SIZE; systemctl --user reset-failed && systemctl --user start sway-session.target && swaymsg -mt subscribe '[]' || true && systemctl --user stop sway-session.target"
